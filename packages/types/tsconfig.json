{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "dom",
    ],
    "baseUrl": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "watch": false,
    "declaration": true,
    "sourceMap": false,
    "noUnusedLocals": true,
    "incremental": false,
    "experimentalDecorators": true
  },
  "include": [
    "./src/index.ts",
  ],
  "exclude": [
    "./node_modules",
  ],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  }
}